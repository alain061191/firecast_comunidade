            <TextView
                android:id="@+id/tv_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_sem_informacao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <TextView
                android:id="@+id/tv_viatura_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/tv_viatura_activity_detalhes_ocorrencia" />

            <TextView
                android:id="@+id/tv_viatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_sem_informacao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <TextView
                android:id="@+id/tv_tempo_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/tv_data_activity_detalhes_ocorrencia" />

            <TextView
                android:id="@+id/tv_tempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_sem_informacao" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >

            <TextView
                android:id="@+id/tv_distancia_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/tv_distancia_activity_detalhes_ocorrencia" />

            <TextView
                android:id="@+id/tv_distancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_sem_informacao" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_mostrar_mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_mostrar_no_mapa_activity_detalhes_ocorrencia" />

        <Button
            android:id="@+id/btn_ir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_a_caminho_activity_detalhes_ocorrencia" />

        <Button
            android:id="@+id/btn_compartilhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_compartilhar" />
    </LinearLayout>

</ScrollView>